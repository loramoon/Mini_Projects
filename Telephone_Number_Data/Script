import phonenumbers
from phonenumbers import carrier
from phonenumbers import geocoder
from phonenumbers import timezone

# use format as: +359 2 385 1261
# this is a phone number generated by fakenumber.org

a = input("Enter a phone number: ")

# Find carrier and region of a phone number
phone_number = phonenumbers.parse(a)
print(f"Region: " + geocoder.description_for_number(phone_number, 'en'))
print(f"Service Supplier: " + carrier.name_for_number(phone_number, 'en'))

# It gets the timezone of a phone number
time_zone = timezone.time_zones_for_number(phone_number)
print(f"Time Zone: {time_zone}")

# Validating a phone number
valid = phonenumbers.is_valid_number(phone_number)

# Checking possibility of a number
possible = phonenumbers.is_possible_number(phone_number)

# Printing the output
print(f"Valid number: {valid}")
print(f"Available number: {possible}")
